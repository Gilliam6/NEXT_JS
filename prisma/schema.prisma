generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Shops {
  id Int @id @default(autoincrement())
  Name  String?
  grocery Groceries[]
}

model Groceries {
  id Int @id @default(autoincrement())
  Title String
  ShopId Int
  Shop Shops @relation(fields:[ShopId], references: [id])

  Description String?
  Price Float
  Amount Int

  @@index([ShopId])
}